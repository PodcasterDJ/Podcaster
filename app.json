{
    "name": "Podcaster",
    "description": "Set-up FREE Django Podcasts & Blog page in minutes.",
    "website": "http://hvitis.com",
    "success_url": "/free-podcasts-blog-template-based-on-django",
    "addons": ["heroku-postgresql:hobby-dev", "papertrail"],
    "buildpacks": [{
        "url": "heroku/python"
    }],
    "image": "heroku/python",
    "env": {
        "ENV": "prod",
        "SECRET_KEY": {
            "description": "This gets generated",
            "value": "Django generated secret key",
            "generator": "secret"
        },
        "ALLOWED_HOSTS": {
            "description": "Address of your webpage. Can be changed later.",
            "value": "*",
            "required": false
        },
        "DB_NAME": {
            "description": "Automatically generated heroku Database name.",
            "value": "",
            "required": false,
            "generator": "secret"
        },
        "DB_USER": {
            "description": "Automatically generated heroku Database user.",
            "value": "",
            "required": false
        },
        "DB_PASS": {
            "description": "Automatically generated heroku Database password.",
            "value": "",
            "required": false
        },
        "DB_HOST": {
            "description": "Automatically generated heroku Database host.",
            "value": "",
            "required": false
        },
        "AWS_ACCESS_KEY_ID": {
            "description": "AWS S3 Kei ID - generated by you on your AWS account.",
            "value": "REQUIRED"
        },
        "AWS_SECRET_ACCESS_KEY": {
            "description": "AWS S3 Access Key - generated by you on your AWS account.",
            "value": "REQUIRED"
        },
        "AWS_STORAGE_BUCKET_NAME": {
            "description": "AWS S3 Bucket name - created by you on your AWS account.",
            "value": "REQUIRED"
        }
    }
}